<resources>

    <!-- Base application theme. -->
    <style name="Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="BaseAnim" parent="@android:style/Animation.Translucent">
        <!--新Activity进入动画-->
        <item name="android:activityOpenEnterAnimation">@anim/right_to_left_enter</item>
        <!--旧Activity退出动画-->
        <item name="android:activityOpenExitAnimation">@anim/right_to_left_exit</item>
        <!--旧Activity进入动画-->
        <item name="android:activityCloseEnterAnimation">@anim/left_to_right_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/left_to_right_exit</item>
        <!--<item name="android:windowEnterAnimation">@anim/right_to_left_enter</item>
        <item name="android:windowExitAnimation">@anim/left_to_right_enter</item>-->
    </style>

    <style name="Button">

    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="Base">
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- <item name="android:windowAnimationStyle">@style/MainAnim</item>-->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!--<style name="MainAnim" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/no_anim</item>
        <item name="android:windowExitAnimation">@anim/main_exit</item>
    </style>-->

    <style name="AppTheme.LockScreen" parent="Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Settings" parent="Base">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="WelcomeAnim">
        <!--&lt;!&ndash;新Activity进入动画&ndash;&gt;
        <item name="android:activityOpenEnterAnimation">@anim/translate_enter</item>
        &lt;!&ndash;旧Activity退出动画&ndash;&gt;
        <item name="android:activityOpenExitAnimation">@null</item>
        &lt;!&ndash;旧Activity进入动画&ndash;&gt;
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_exit</item>-->
        <item name="android:windowEnterAnimation">@anim/translate_enter</item>
        <item name="android:windowExitAnimation">@anim/translate_exit</item>
    </style>

    <style name="AppTheme.Welcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/WelcomeAnim</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.Settings">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Line" parent="Base" />

    <style name="Line.Settings" parent="Widget.AppCompat.ButtonBar">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:layout_height">@dimen/itemHeight</item>
    </style>

    <style name="AppTheme.Preview" parent="Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/normal</item>
        <item name="android:windowSharedElementExitTransition">@transition/normal</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomMenuAnim">
        <item name="android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>

    <style name="BottomMenu" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--activity不变暗-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/BottomMenuAnim</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">@drawable/bottom_menu_button</item>
        <item name="android:paddingEnd">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/padding</item>
    </style>
</resources>
