<resources>

    <!-- Base application theme. -->
    <style name="Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="Button">

    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="Base">
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.LockScreen" parent="Base">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Settings" parent="Base">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.Settings">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Line" parent="Base" />

    <style name="Line.Settings" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:layout_height">@dimen/lineHeight</item>
    </style>

    <style name="PreviewTheme" parent="Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/normal</item>
        <item name="android:windowSharedElementExitTransition">@transition/normal</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        -->
    </style>
</resources>
